  const [isLoading, setIsLoading] = useState(false);
  
  useEffect(() => {
    if (isOpen && moduleId) {
      loadCurrentAssignments();
    }
  }, [isOpen, moduleId]);
  
  const loadCurrentAssignments = async () => {
    setIsLoading(true);
    try {
      // Alle aktiven VertrÃ¤ge laden
      const { data: contracts } = await supabase
        .from('contracts')
        .select('id, name, contract_group_id')
        .eq('is_active', true)
