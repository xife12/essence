-- Funktion fÃ¼r automatische Mitgliedsnummer-Generierung (Fallback)
CREATE OR REPLACE FUNCTION generate_member_number()
RETURNS TRIGGER AS $$
BEGIN
  IF NEW.member_number IS NULL THEN
    NEW.member_number = 'AUTO-' || EXTRACT(YEAR FROM NOW()) || '-' || 
                       LPAD(nextval('member_number_seq')::TEXT, 4, '0');
  END IF;
  RETURN NEW;
END;
$$ LANGUAGE plpgsql;

-- Sequence fÃ¼r Auto-Nummern
CREATE SEQUENCE member_number_seq START 1000;

-- Trigger fÃ¼r Member Number Generation
